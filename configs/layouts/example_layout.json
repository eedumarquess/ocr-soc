{
  "layout_id": "example_layout",
  "description": "Layout de exemplo para testes",
  "version": "1.0",
  "created_at": "2025-01-01T00:00:00Z",
  
  "preprocessing": {
    "deskew": true,
    "deskew_threshold": 0.5,
    "binarization": "adaptive",
    "adaptive_block_size": 15,
    "denoise": true,
    "denoise_strength": 3,
    "sharpen": true,
    "sharpen_strength": 0.5,
    "contrast_normalization": true,
    "clahe_clip_limit": 1.2,
    "border_removal": true,
    "border_threshold": 10,
    "resize_to_reference": false,
    "reference_dpi": 300
  },
  
  "anchor": {
    "primary": {
      "type": "qrcode",
      "expected_content_pattern": null,
      "search_region": null,
      "min_confidence": 0.8
    },
    "fallbacks": [
      {
        "type": "text",
        "keyword": "LAUDO",
        "search_region": null,
        "fuzzy_match": true,
        "max_distance": 2
      }
    ],
    "fallback_on_low_confidence": true,
    "min_confidence_threshold": 0.7
  },
  
  "rois": [
    {
      "id": "patient_name",
      "label": "Nome do Paciente",
      "relative_position": [50, -30],
      "size": [300, 40],
      "ocr_config": {
        "type": "text",
        "lang": "por",
        "allowed_chars": "A-ZÀ-Ÿ\\s",
        "preprocessing": ["uppercase", "strip"]
      },
      "validation": {
        "regex": "^[A-ZÀ-Ÿ\\s]{3,}$",
        "required": true
      }
    }
  ],
  
  "post_processing": {
    "medical_term_normalization": true,
    "decimal_standardization": ".",
    "output_format": "json"
  }
}


